{
  "system": {
    "name": "نظام حجز السكن الجامعي",
    "version": "2.0.1",
    "university": "جامعة نجران",
    "department": "عمادة شؤون الطلاب - إدارة السكن الطلابي",
    "academicYear": "1445-1446 هـ",
    "supportEmail": "housing@nu.edu.sa",
    "supportPhone": "0175432100",
    "supportHours": "8:00 صباحاً - 3:00 مساءً (الأحد - الخميس)"
  },
  "registration": {
    "minGPA": 0,
    "maxGPA": 5,
    "requiredFields": ["fullName", "nationalId", "phone", "email", "gender", "province", "gpa", "specialization"],
    "validationRules": {
      "fullName": {
        "minLength": 10,
        "pattern": "^[\\u0600-\\u06FF\\s]+$",
        "message": "الاسم الرباعي يجب أن يكون 10 أحرف على الأقل وباللغة العربية فقط"
      },
      "nationalId": {
        "pattern": "^[0-9]{10}$",
        "message": "رقم الهوية الوطني يجب أن يتكون من 10 أرقام"
      },
      "phone": {
        "pattern": "^05[0-9]{8}$",
        "message": "رقم الهاتف يجب أن يبدأ بـ 05 ويتكون من 10 أرقام"
      },
      "email": {
        "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
        "message": "البريد الإلكتروني غير صالح"
      }
    }
  },
  "housing": {
    "totalCapacity": 3500,
    "maleBuildings": {
      "A": {
        "name": "المبنى أ",
        "capacity": 200,
        "roomType": "فردية",
        "facilities": ["مكيف", "إنترنت", "ثلاجة"]
      },
      "B": {
        "name": "المبنى ب",
        "capacity": 300,
        "roomType": "مزدوجة",
        "facilities": ["مكيف", "إنترنت", "مطبخ مشترك"]
      },
      "C": {
        "name": "المبنى ج",
        "capacity": 400,
        "roomType": "ثلاثية",
        "facilities": ["مكيف", "إنترنت", "صالة ألعاب"]
      }
    },
    "femaleBuildings": {
      "1": {
        "name": "المبنى 1",
        "capacity": 180,
        "roomType": "فردية",
        "facilities": ["مكيف", "إنترنت", "ثلاجة"]
      },
      "2": {
        "name": "المبنى 2",
        "capacity": 250,
        "roomType": "مزدوجة",
        "facilities": ["مكيف", "إنترنت", "مطبخ مشترك"]
      },
      "3": {
        "name": "المبنى 3",
        "capacity": 320,
        "roomType": "ثلاثية",
        "facilities": ["مكيف", "إنترنت", "صالة ألعاب"]
      }
    }
  },
  "priority": {
    "gpaWeight": 70,
    "distanceWeight": 30,
    "distanceMap": {
      "نجران": 0,
      "الرياض": 85,
      "مكة المكرمة": 90,
      "المدينة المنورة": 88,
      "الشرقية": 95,
      "عسير": 30,
      "جازان": 65,
      "حائل": 75,
      "القصيم": 70,
      "تبوك": 80,
      "الجوف": 82,
      "الباحة": 40,
      "الحدود الشمالية": 89
    }
  },
  "security": {
    "sessionTimeout": 8,
    "maxLoginAttempts": 5,
    "passwordPolicy": {
      "minLength": 8,
      "requireNumbers": true,
      "requireSpecialChars": true
    },
    "encryption": {
      "algorithm": "AES-GCM",
      "keyLength": 256
    }
  },
  "notifications": {
    "email": {
      "enabled": true,
      "templates": {
        "registration": "registration_email.html",
        "confirmation": "confirmation_email.html",
        "reminder": "reminder_email.html"
      }
    },
    "sms": {
      "enabled": true,
      "provider": "سلاك"
    }
  },
  "export": {
    "formats": ["csv", "json", "pdf"],
    "maxRecords": 10000,
    "autoBackup": true,
    "backupInterval": 24
  },
  "analytics": {
    "enabled": true,
    "trackEvents": ["registration", "login", "building_selection", "reservation"],
    "retentionDays": 90
  },
  "admin": {
    "roles": [
      {
        "name": "super_admin",
        "permissions": ["full_access"]
      },
      {
        "name": "housing_manager",
        "permissions": ["view", "edit", "reports", "notifications"]
      },
      {
        "name": "viewer",
        "permissions": ["view", "reports"]
      }
    ]
  }
}
